    .then((data) => {
      formEditar.nombre.value = data.nombre;
      formEditar.usuario.value = data.usuario;
      formEditar.tipoPerfil.value = data.tipo_perfil;
      formEditar.activo.value = data.activo;
      
      // Update image preview if exists
      if (data.imagen) {
