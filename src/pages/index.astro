<script>
  const searchInput = document.getElementById("search-input");
  function expandSearch() {
    searchInput.classList.add("lg:w-full");
  }
  function shrinkSearch() {
    searchInput.classList.remove("lg:w-full");
  }
</script>
<script>
 let cart = JSON.parse(localStorage.getItem("cart")) || [];

function updateCartDisplay() {
    const cartTotal = cart.reduce((total, item) => total + item.price * item.quantity, 0).toFixed(2);
  const cartCount = cart.reduce((count, item) => count + item.quantity, 0); 
  document.getElementById('cart-total').textContent = `$${cartTotal}`;
  document.getElementById('cart-count').textContent = cartCount;
}

  function agregarAlCarrito(producto) {
    const existingProductIndex = cart.findIndex(item => item.name === producto.nombre);

    if (existingProductIndex === -1) {
      cart.push({ name: producto.nombre, price: producto.precio_venta1, img: producto.imagen, quantity: 1 });
    } else {
      cart[existingProductIndex].quantity += 1;
    }

    localStorage.setItem('cart', JSON.stringify(cart));
    updateCartDisplay();
    window.showAlert(`Añadido al carrito: ${producto.nombre}`,"success");
  }

document.addEventListener("DOMContentLoaded", () => {
  updateCartDisplay();

  document.querySelectorAll('[id^="add-to-cart-"]').forEach(button => {
    button.addEventListener('click', (event) => {
      const producto = JSON.parse(event.target.getAttribute('data-producto'));
      agregarAlCarrito(producto);
    });
  });
});
</script>