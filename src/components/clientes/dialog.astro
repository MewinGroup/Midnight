---
interface DialogProps {
  open: boolean;
  onClose: () => void;
  id: string;
}

const { open, onClose, id } = Astro.props as DialogProps;
---

<style>
  dialog::backdrop {
    background-color: rgba(0, 0, 0, 0.7); /* Fondo oscuro semi-transparente */
    transition: opacity 0.3s ease-in-out; /* Transici√≥n suave */
  }
</style>

<dialog
  id={id}
  class="fixed inset-0 bg-gray-600 bg-opacity-50 items-center transition-opacity duration-300 ease-in-out rounded-lg"
>
  <slot />
</dialog>
